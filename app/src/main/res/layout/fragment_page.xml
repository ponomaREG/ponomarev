<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/fragment_page_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/description_image_gif"
        android:scaleType="centerCrop"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_page_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/fragment_page_button_refresh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/page_card_margin"
        app:cardCornerRadius="@dimen/page_card_corner_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fragment_page_textView_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/fragment_page_textView_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/fragment_page_textView_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ProgressBar
        android:id="@+id/fragment_page_progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/page_button_margin"
        android:layout_gravity="bottom"
        android:scrollbarSize="22dp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_page_button_previously"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/page_button_margin"
        android:layout_gravity="bottom|start"
        android:contentDescription="@string/fab_description_left"
        android:rotation="180"
        app:srcCompat="@drawable/ic_arrow"
        style="@style/Theme.Ponomarev.FloatingButton" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_page_button_refresh"
        style="@style/Theme.Ponomarev.FloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/page_button_margin"
        android:layout_gravity="bottom|center"
        android:contentDescription="@string/fab_description_refresh"
        app:srcCompat="@drawable/ic_reload" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_page_button_next"
        style="@style/Theme.Ponomarev.FloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/page_button_margin"
        android:layout_gravity="bottom|end"
        android:contentDescription="@string/fab_description_right"
        app:srcCompat="@drawable/ic_arrow" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>